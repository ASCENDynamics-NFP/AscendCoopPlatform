rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /accounts/{accountId}/{allPaths=**} {
      allow read: if 
      	request.auth != null; 
      allow write: if 
      	request.auth != null && 
        request.auth.uid == userId && 
        request.resource.contentType.matches('image/.*') && 
        request.resource.size < 5 * 1024 * 1024; // 5MB
    }
    match /feedback/{userId}/{allPaths=**} {
      allow read: if 
      	request.auth != null; 
      allow write: if 
      	request.auth != null && 
        request.auth.uid == userId && 
        request.resource.contentType.matches('image/.*') && 
        request.resource.size < 5 * 1024 * 1024; // 5MB
    }
    match /groups/{groupId}/{allPaths=**} {
      allow read; 
      allow write: if 
      	request.auth != null && 
        request.resource.contentType.matches('image/.*') && 
        request.resource.size < 5 * 1024 * 1024; // 5MB
    }
    match /users/{userId}/{allPaths=**} {
      allow read: if 
      	request.auth != null; 
      allow write: if 
      	request.auth != null && 
      	request.auth.uid == userId && 
      	request.resource.contentType.matches('image/.*') && 
      	request.resource.size < 5 * 1024 * 1024; // 5MB
    }
  }
}