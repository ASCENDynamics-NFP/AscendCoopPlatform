{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "@shared/*": ["../shared/*"],
      "firebase/*": ["node_modules/firebase/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "src/**/**/*",
    "../shared/**/*.ts",
    "src/services/**/*",
    "src/api/**/*",
    "src/utils/**/*"
  ]
}
