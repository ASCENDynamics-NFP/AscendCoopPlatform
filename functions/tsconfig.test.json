{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["mocha", "chai", "node"],
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/*"],
      "firebase/*": ["node_modules/firebase/*"]
    }
  },
  "include": ["test/**/*.ts", "src/**/*.ts", "../shared/**/*.ts"]
}
